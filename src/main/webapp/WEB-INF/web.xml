<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>org.jala.efeeder.servlets.GreetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/Greeting</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateSuggestionServlet</servlet-name>
        <servlet-class>org.jala.efeeder.servlets.CreateSuggestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateSuggestionServlet</servlet-name>
        <url-pattern>/suggestions/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommandServlet</servlet-name>
        <servlet-class>org.jala.efeeder.servlets.CommandServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommandServlet</servlet-name>
        <url-pattern>/action/*</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>org.jala.efeeder.servlets.ApplicationContextListener</listener-class>
    </listener>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>efeeder</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <context-param>
        <param-name>liquibase.changelog</param-name>
        <param-value>db/db-incremental.xml</param-value>
    </context-param>

    <context-param>
        <param-name>liquibase.datasource</param-name>
        <param-value>java:comp/env/jdbc/efeeder</param-value>
    </context-param>

    <listener>
        <listener-class>liquibase.integration.servlet.LiquibaseServletListener</listener-class>
    </listener>
</web-app>
