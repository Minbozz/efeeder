<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>org.jala.efeeder.servlets.GreetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/Greeting</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateSuggestionServlet</servlet-name>
        <servlet-class>org.jala.efeeder.servlets.CreateSuggestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateSuggestionServlet</servlet-name>
        <url-pattern>/suggestions/create</url-pattern>
    </servlet-mapping>
</web-app>
